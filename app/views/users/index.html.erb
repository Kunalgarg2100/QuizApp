<% provide(:title, 'All users') %>
<h1>All users</h1>
<% if current_user.admin? && !current_user?(@user) %>
<%= will_paginate %>
<ul class="users">
  <% @users.each do |user| %>
  <li>
  <%= gravatar_for user, size: 50 %>
  
  <%= link_to user.name, user %> 
  <% if user.admin == false %>
  | <%= link_to "delete", user, method: :delete, data: { confirm: "You sure?" } %>
  <% end %>
</li>
  <% end %>
</ul>
<%= will_paginate %>
<% else %>
<%= will_paginate %>
<ul class="users">
  <% @users.each do |user| %>
  <li>
  <%= gravatar_for user, size: 50 %>
  
  <%= link_to user.name, user %> 
</li>
  <% end %>
</ul>
<%= will_paginate %>
<% end %>
