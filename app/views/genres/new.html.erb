<% provide(:title, 'Add Question') %>
<h1>Quiz Setup</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
   <%= form_for(@genre) do |f| %>
    <div class="field">
     <%= f.label :content %>
	 <%= f.text_field :content, class: 'form-control' %>
  </div>
  <%= f.fields_for :subgenres, Subgenre.new do |ff| %>
    <p>
      Subgenre: <%= ff.text_field :cont %>
    </p>
    <% end %>

  <%= f.submit 'Create genre' %>
	<% end %>

  </div>
</div>