<% provide(:title, 'Add Genre') %>
<h1>Add Genre</h1>
<div class="row">
  <div class="col-md-4 col-md-offset-4">
   <%= form_for(@genre) do |f| %>
   <% render 'form' %>
    <div class="field">
      <%= f.label :content %>
	    <%= f.text_field :content, class: 'form-control' %>
    </div>
    <%= f.fields_for :subgenres, Subgenre.new do |ff| %>
      <div class="field">
      <%= ff.label :Subgenre %>
      <%= ff.text_field :cont, class: 'form-control' %>
      </div>

    <% end %>
  <%= f.submit 'Create Genre' , class: 'btn btn-info'%>
	<% end %>

  </div>
</div>