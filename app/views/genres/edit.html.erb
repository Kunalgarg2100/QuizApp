<% provide(:title, 'Edit Genre') %>
<h1>Edit Genre</h1>
<div class="row">
  <div class="col-md-4 col-md-offset-4">
   <%= form_for(@genre) do |f| %>
   <% render 'form' %>
   
    <div class="field">
     <%= f.label :content %>
    <%= f.text_field :content, class: 'form-control' %>
  </div>
    <%= f.submit 'Update Genre',class: "btn btn-info" %>
  <% end %>

  </div>
</div>
