    <%= f.label :optC, class:"checkbox inline", style:"position:absolute;margin-top: 2px;" do %><%= f.check_box :optC,style:"position:relative;margin-left: 20px;"  %><span  style="font-size: medium;"><%= @question.optC %></span><% end %>
    <br/>
	<%= f.label :optD, class:"checkbox inline", style:"position:absolute;margin-top: 2px;" do %><%= f.check_box :optD,style:"position:relative;margin-left: 20px;"  %><span  style="font-size: medium;"><%= @question.optD %></span><% end %>
    </div><br/><br/><br/>
    <div class="actions">
